<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weather.hashim.com.showweather.MainActivity">








    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:background="@color/bluelike">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Show Weather"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"


            />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_settings"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/backArrow"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            />



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout2"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/day"
                android:text="Today, April 20"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="#FFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempMain"
                android:text="19"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="70sp"
                android:layout_below="@id/day"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tempSecondry"
                android:layout_toEndOf="@id/tempMain"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/day"
                android:text="4"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#FFF"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_below="@id/tempMain"
                android:text="London, UK"
                android:textColor="#FFF"
                android:textStyle="normal"
                android:textSize="20sp"

            />







        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="50dp"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/art_clear"
                android:id="@+id/weatherImage"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/weatherImage"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:text="Clear"
                android:textSize="20sp"
                android:textStyle="normal"
                android:textColor="#FFF"
                android:id="@+id/weatherDescription"

                />





        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
